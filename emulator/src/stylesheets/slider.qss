QSlider {
    background: transparent;
}

QSlider::groove:horizontal {
    border: none;
    height: 6px;
    background: #F0F0F0;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background: #888;
    width: 14px;
    height: 14px;
    margin: -4px 0;
    border-radius: 7px;
}

QSlider::sub-page:horizontal {
    background: #5e8bbd;
    border-radius: 3px;
}

QSlider::add-page:horizontal {
    background: #F0F0F0;
    border-radius: 3px;
}